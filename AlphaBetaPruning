def alphabeta(depth, idx, is_maximizing, values, max_depth, alpha, beta):
    if depth == max_depth:  # leaf node
        offset = (2**max_depth) - 1
        return values[idx-offset]

    if is_maximizing:
        best = float("-inf")
        for child_idx in [idx * 2 + 1, idx * 2 + 2]:  
            value = alphabeta(depth + 1, child_idx, False, values, max_depth, alpha, beta)
            best = max(best, value)
            alpha = max(alpha, best)     
            if beta <= alpha:           
                break
        return best
    else:  # minimizing
        best = float("inf")
        for child_idx in [idx * 2 + 1, idx * 2 + 2]:
            value = alphabeta(depth + 1, child_idx, True, values, max_depth, alpha, beta)
            best = min(best, value)
            beta = min(beta, best)      
            if beta <= alpha:           
                break
        return best

values = [4,8,9,3,2,-2,9,-1]   # leaf node values
tree_depth = 3         # height of the tree

print("The optimal value is:", alphabeta(0, 0, True, values, tree_depth, float("-inf"), float("inf")))
